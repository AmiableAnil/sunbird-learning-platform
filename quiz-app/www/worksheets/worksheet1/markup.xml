<theme>
    <manifest>
        <media id="bg" src="assets/theme1/bg.png" type="image" />
        <media id="noah" src="assets/theme1/noah.png" type="image" />
        <media id="entermission" src="assets/theme1/entermission.png" type="image" />
        <media id="entermission" src="assets/theme1/entermission.png" type="image" />
        <media id="blacktint_full" src="assets/theme1/blacktint_full.png" type="image" />
        <media id="blacktint_square" src="assets/theme1/blacktint_736x648.png" type="image" />
        <media id="blacktint_rect" src="assets/theme1/blacktint_736x325.png" type="image" />
        <media id="home_icon" src="assets/theme1/home_icon.png" type="image" />
        <media id="startnow" src="assets/theme1/startnow.png" type="image" />
        <media id="speechbubble" src="assets/theme1/speechbubble.png" type="image" />
        <media id="separator_vertical" src="assets/theme1/separator_vertical.png" type="image" />
        <media id="separator_horizontal" src="assets/theme1/separator_horizontal.png" type="image" />
        <media id="plus" src="assets/theme1/operators/operator_plus.png" type="image" />
        <media id="minus" src="assets/theme1/operators/operator_minus.png" type="image" />
        <media id="equals" src="assets/theme1/operators/operator_equals.png" type="image" />
        <media id="hint" src="assets/theme1/icons/icon_hint.png" type="image" />
        <media id="validate" src="assets/theme1/icons/icon_validate.png" type="image" />
        <media id="difficulty_high" src="assets/theme1/icons/icon_difficulty_high.png" type="image" />
        <media id="next" src="assets/theme1/icons/icon_next.png" type="image" />
        <media id="previous" src="assets/theme1/icons/icon_previous.png" type="image" />
        <media id="profile" src="assets/theme1/icons/icon_profile.png" type="image" />

        <media id="correct_answer" src="assets/theme1/spaceship_gotitcorrect.png" type="image" />
        <media id="wrong_answer" src="assets/theme1/spaceship_wronganswer.png" type="image" />
        <media id="button_next" src="assets/theme1/button_next.png" type="image" />
        <media id="button_tryagain" src="assets/theme1/button_tryagain.png" type="image" />

        <media id="butterfly_ltgray" src="assets/theme1/characters/character_butterfly_ltgray.png" type="image" /> 
        <media id="butterfly_midgray" src="assets/theme1/characters/character_butterfly_midgray.png" type="image" />
        <media id="butterfly_white" src="assets/theme1/characters/character_butterfly_white.png" type="image" />
        <media id="cat_ltgray" src="assets/theme1/characters/character_cat_ltgray.png" type="image" />
        <media id="cat_midgray" src="assets/theme1/characters/character_cat_midgray.png" type="image" />
        <media id="cat_white" src="assets/theme1/characters/character_cat_white.png" type="image" />
        <media id="deer_ltgray" src="assets/theme1/characters/character_deer_ltgray.png" type="image" />
        <media id="deer_midgray" src="assets/theme1/characters/character_deer_midgray.png" type="image" />
        <media id="deer_white" src="assets/theme1/characters/character_deer_white.png" type="image" />
        <media id="elephant_ltgray" src="assets/theme1/characters/character_elephant_ltgray.png" type="image" />
        <media id="elephant_midgray" src="assets/theme1/characters/character_elephant_midgray.png" type="image" />
        <media id="elephant_white" src="assets/theme1/characters/character_elephant_white.png" type="image" />

        <media id="thunder_sound" src="assets/thunder.mp3" type="sound" />
        <media id="sound_image" src="assets/sound.png" type="image" />

        <media id="worksheet_data" src="worksheets/worksheet1/items.json" type="json" />
    </manifest>
    <datasource asset="worksheet_data"/>
    <stage id="splash" start="true" x="0" y="0" w="100" h="100">
        <image asset="bg" x="0" y="0" w="100" h="100"/>
        <image asset="blacktint_square" x="4" y="34" w="38" h="50"/>
        <!-- fontsize is the expected font size of text in 1920 x 1200 resolution -->
        <text x="10" y="15" w="22" h="23" font="Arial" weight="bold" fontsize="96" color="#fff">
            Noah's Ark...
        </text>
        <text x="7" y="40" w="32" h="49" font="Arial, serif" fontsize="48" color="#fff">
            Noah, an alien from Mars is on a mission to take some living beings from Earth to Mars. He has come with a space ship to Earth. He wants collect the following beings. Help him to add and get the required number of items.
        </text>
        <image asset="noah" x="48" y="10" w="20" h="65"/>
        <image asset="entermission" x="30" y="78" w="22" h="22" onclick="stage:next"/>
        <events>
            <event on="enter" sprite="" animation="" effect=""/>
            <event on="idle" sprite="" animation="" effect=""/>
            <event on="next" transition="welcome" effect="scroll" direction="top" ease="linear" duration="1000"/>
        </events>
    </stage>
    <stage id="welcome" x="0" y="0" w="100" h="100">
        <audio id="thunder_sound"/>
        <image asset="bg" x="0" y="0" w="100" h="100"/>
        <image asset="blacktint_square" x="4" y="34" w="38" h="30"/>
        <image asset="startnow" x="4" y="65" w="35" h="30" onclick="next"/>
        <image asset="noah" x="60" y="10" w="20" h="65"/>
        <image asset="speechbubble" x="35" y="17" w="32" h="19"/>
        <!-- fontsize is the expected font size of text in 1920 x 1200 resolution -->
        <text x="10" y="15" w="22" h="23" font="Arial" weight="bold" fontsize="96" color="#fff">
            Noah's Ark...
        </text>
        <text x="7" y="40" w="32" h="40" font="Arial" fontsize="48" color="#fff">
            Add the things in pictures to find out the total number of beings that Noah is carrying in his spaceship to Mars.
        </text>
        <text x="38" y="22" w="28" h="16" font="Arial, serif" fontsize="32" color="#000">Hey, Ramya...
I need your help in adding the
things to my space ship
        </text>
        <shape type="rect" x="67" y="27" w="5" h="10" hitArea="true" rotate="30" onclick="toggleThunder"/>
        <events>
            <event on="next" transition="item" effect="scroll" direction="top" ease="linear" duration="1000"/>
            <event on="enter" audio="true" type="play" asset="thunder_sound" loop="1"/>
            <event on="toggleThunder" audio="true" type="toggle" asset="thunder_sound" loop="1"/>
        </events>
    </stage>
    <stage id="item" x="0" y="0" w="100" h="100">
        <g x="0" y="0" w="100" h="100">
            <image asset="bg" x="0" y="0" w="100" h="100"/>
            <image asset="difficulty_high" x="1" y="1" w="5" h="9"/>
            <image asset="blacktint_rect" x="-2" y="0" w="40" h="10"/>
            <text x="6" y="5" w="40" h="10" font="Arial" fontsize="48" color="#fff">
                ADDITION - By Grouping
            </text>
            <placeholder param="var1" x="5" y="15" w="25" h="25"/>
            <input type="number" class="inputText" x="14" y="57" w="7" h="7" id="text1" param="ans1"/>
            <image asset="separator_vertical" x="32" y="10" w="0.5" h="50"/>
            <placeholder param="var2" x="37" y="15" w="25" h="25"/>
            <input type="number" class="inputText" x="43" y="57" w="7" h="7" id="text2" param="ans2"/>
            <image asset="separator_horizontal" x="2" y="65" w="58" h="1"/>
            <placeholder param="var3" x="2" y="66" w="80" h="15"/>
            <input type="number" class="inputText" x="28" y="90" w="7" h="7" id="text3" param="ans3"/>
            <image asset="plus" x="30.7" y="33" w="3" h="3"/>
            <image asset="equals" x="30.7" y="64" w="3" h="3"/>
            <image asset="noah" x="62" y="5" w="15" h="50" id="img_noah"/>
            <image asset="previous" x="83" y="1" w="5" h="9" onclick="stage:paginate_prev"/>
            <image asset="profile" x="88" y="1" w="5" h="9"/>
            <image asset="next" x="93" y="1" w="5" h="9" onclick="stage:next"/>
            <image asset="hint" x="93" y="20" w="5" h="9"/>
            <image asset="validate" x="93" y="30" w="5" h="9" onclick="stage:eval"/>
        </g>
        <image asset="blacktint_full" x="0" y="0" w="100" h="100" hide="true" id="img_overlay"/>
        <image asset="correct_answer" x="100" y="0" w="5" h="5" hide="true" id="img_correct_answer" animate_on_show="spaceShip">
            <animate id="spaceShip" type="tween" widthChangeEvent="true">
                <to ease="linear" duration="10"><![CDATA[{"x":100,"y":0,"visible":true}]]></to>
                <to ease="quartIn" duration="1000"><![CDATA[{"x":0,"y":10,"w":45,"h":45}]]></to>
                <to ease="circOut" duration="500"><![CDATA[{"x":15,"y":15,"w":70,"h":70}]]></to>
            </animate>
        </image>
        <image asset="wrong_answer" x="15" y="15" w="70" h="70" hide="true" id="img_wrong_answer" animate_on_show="spaceShip">
            <animate id="spaceShip" type="tween" widthChangeEvent="true">
                <to ease="linear" duration="10"><![CDATA[{"x":100,"y":0,"visible":true}]]></to>
                <to ease="quartIn" duration="1000"><![CDATA[{"x":0,"y":10,"w":45,"h":45}]]></to>
                <to ease="circOut" duration="500"><![CDATA[{"x":15,"y":15,"w":70,"h":70}]]></to>
            </animate>
        </image>
        <image asset="button_next" x="43" y="45" w="15" h="5" hide="true" id="btn_next" onclick="next" animate_on_show="delayedShow">
            <animate id="delayedShow" type="tween">
                <to duration="1500" ease="linear"><![CDATA[{"x":43,"y":45,"visible":true}]]></to>
            </animate>
        </image>
        <image asset="button_tryagain" x="43" y="45" w="15" h="5" hide="true" id="btn_try_again" onclick="try_again" animate_on_show="delayedShow">
            <animate id="delayedShow" type="tween">
                <to duration="1500" ease="linear"><![CDATA[{"x":43,"y":45,"visible":true}]]></to>
            </animate>
        </image>
        <events>
            <event on="eval" eval="text1,text2,text3" success="correct_answer" failure="wrong_answer"/>
            <event on="correct_answer" show="img_overlay,img_correct_answer,btn_next,sprite_correct_answer" hide="img_wrong_answer,btn_try_again"/>
            <event on="wrong_answer" show="img_overlay,img_wrong_answer,btn_try_again" hide="img_correct_answer,sprite_correct_answer,btn_next"/>
            <event on="try_again" reload="true"/>
            <event on="paginate_prev" transition="item" effect="scroll" direction="top" ease="linear" duration="1000"/>
            <event on="next" transition="summary" effect="scroll" direction="top" ease="linear" duration="1000"/>
        </events>
    </stage>
    <stage id="summary" x="0" y="0" w="100" h="100">
        <image asset="bg" x="0" y="0" w="100" h="100"/>
        <image asset="home_icon" x="93" y="1" w="5" h="9" onclick="start_page"/>
        <image asset="difficulty_high" x="1" y="1" w="5" h="9"/>
        <image asset="blacktint_rect" x="-2" y="0" w="40" h="10"/>
        <image asset="speechbubble" x="5" y="30" w="50" h="30"/>
        <image asset="noah" x="48" y="35" w="20" h="65"/>
        <text x="6" y="5" w="40" h="10" font="Arial" fontsize="48" color="#fff">
            ADDITION - By Grouping
        </text>
        <summary x="13" y="35" w="25" h="40" font="Arial" fontsize="40" color="#333" param="summary">
        </summary>
        <events>
            <event on="start_page" start_page="index.html"/>
        </events>
    </stage>
    <events>
        <event on="test" isTest="true"/>
    </events>
</theme>