<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.ekstep</groupId>
		<artifactId>language-platform</artifactId>
		<version>1.0-SNAPSHOT</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>
	<artifactId>language-common</artifactId>

	<properties>
		<cobertura.skip>true</cobertura.skip>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.ilimi</groupId>
			<artifactId>graph-engine</artifactId>
			<version>1.0-SNAPSHOT</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>org.ekstep</groupId>
			<artifactId>search-actors</artifactId>
			<version>1.0-SNAPSHOT</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
			<version>3.2.1</version>
		</dependency>
		<dependency>
			<groupId>io.searchbox</groupId>
			<artifactId>jest</artifactId>
			<version>2.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.ilimi</groupId>
			<artifactId>ekstep-common</artifactId>
			<version>1.0-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>com.googlecode.json-simple</groupId>
			<artifactId>json-simple</artifactId>
			<version>1.1.1</version>
		</dependency>
		<dependency>
			<groupId>net.sf.json-lib</groupId>
			<artifactId>json-lib</artifactId>
			<version>2.4</version>
			<classifier>jdk15</classifier>
		</dependency>
		<dependency>
			<groupId>redis.clients</groupId>
			<artifactId>jedis</artifactId>
			<version>2.6.2</version>
		</dependency>
	</dependencies>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
        			<groupId>org.codehaus.mojo</groupId>
        			<artifactId>cobertura-maven-plugin</artifactId>
        			<version>2.7</version>
        			<configuration>
        				<aggregate>true</aggregate>
        				<outputDirectory>coverageReport</outputDirectory>
        				<formats>
                        	<format>html</format>
                        	<format>xml</format>
                    	</formats>
                    	<instrumentation>
            				<excludes>
            					<exclude>**/common/**</exclude>
              					<exclude>**/dto/**</exclude>
              					<exclude>**/enums/**</exclude>
            				</excludes>
          				</instrumentation>
          				<check>
          					<haltOnFailure>false</haltOnFailure>
          				</check>
          				<skip>true</skip>
        			</configuration>
      			</plugin>
				
			</plugins>
		</pluginManagement>
	</build>
</project>
