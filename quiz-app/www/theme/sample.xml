<theme>
    <manifest>
        <media id="bg" src="bg.png" type="image" />
        <media id="noah" src="noah.png" type="image" />
        <media id="entermission" src="entermission.png" type="image" />
        <media id="entermission" src="entermission.png" type="image" />
        <media id="blacktint_full" src="blacktint_full.png" type="image" />
        <media id="blacktint_square" src="blacktint_736x648.png" type="image" />
        <media id="startnow" src="startnow.png" type="image" />
        <media id="speechbubble" src="speechbubble.png" type="image" />
        <media id="separator_vertical" src="separator_vertical.png" type="image" />
        <media id="separator_horizontal" src="separator_horizontal.png" type="image" />
        <media id="plus" src="operator_plus.png" type="image" />
        <media id="minus" src="operator_minus.png" type="image" />
        <media id="equals" src="operator_equals.png" type="image" />
        <media id="hint" src="icons/icon_hint.png" type="image" />
        <media id="validate" src="icons/icon_validate.png" type="image" />
        <media id="difficulty_high" src="icons/icon_difficulty_high.png" type="image" />

        <media id="correct_answer" src="spaceship_gotitcorrect.png" type="image" />
        <media id="wrong_answer" src="spaceship_wronganswer.png" type="image" />
        <media id="button_next" src="button_next.png" type="image" />
        <media id="button_tryagain" src="button_tryagain.png" type="image" />

        <media id="butterfly_ltgray" src="characters/character_butterfly_ltgray.png" type="image" /> 
        <media id="butterfly_midgray" src="characters/character_butterfly_midgray.png" type="image" />
        <media id="butterfly_white" src="characters/character_butterfly_white.png" type="image" />
        <media id="cat_ltgray" src="characters/character_cat_ltgray.png" type="image" />
        <media id="cat_midgray" src="characters/character_cat_midgray.png" type="image" />
        <media id="cat_white" src="characters/character_cat_white.png" type="image" />
        <media id="deer_ltgray" src="characters/character_deer_ltgray.png" type="image" />
        <media id="deer_midgray" src="characters/character_deer_midgray.png" type="image" />
        <media id="deer_white" src="characters/character_deer_white.png" type="image" />
        <media id="elephant_ltgray" src="characters/character_elephant_ltgray.png" type="image" />
        <media id="elephant_midgray" src="characters/character_elephant_midgray.png" type="image" />
        <media id="elephant_white" src="characters/character_elephant_white.png" type="image" />

        <media id="items" src="items.json" type="json" />
    </manifest>
    <stage id="splash" start="true" x="0" y="0" w="100" h="100">
        <image asset="bg" x="0" y="0" w="100" h="100"/>
        <image asset="blacktint_square" x="4" y="34" w="38" h="50"/>
        <!-- fontsize and width are expected font and widths of text in 1920 x 1200 resolution -->
        <text x="10" y="15" w="22" h="23" font="solid Arial, sans-serif" fontsize="96" width="422" color="#fff">
            Noah's Ark...
        </text>
        <text x="7" y="40" w="32" h="49" font="Arial, serif" fontsize="48" width="614" color="#fff">
            Noah, an alien from Mars is on a mission to take some living beings from Earth to Mars. He has come with a space ship to Earth. He wants collect the following beings. Help him to add and get the required number of items.
        </text>
        <image asset="noah" x="48" y="10" w="20" h="65"/>
        <image asset="entermission" x="30" y="78" w="22" h="22" onclick="stage:next"/>
        <events>
            <event on="enter" sprite="" animation="" effect=""/>
            <event on="idle" sprite="" animation="" effect=""/>
            <event on="next" transition="welcome" effect="moveInRight"/>
        </events>
    </stage>
    <stage id="welcome" x="0" y="0" w="100" h="100">
        <image asset="bg" x="0" y="0" w="100" h="100"/>
        <image asset="blacktint_square" x="4" y="34" w="38" h="30"/>
        <image asset="startnow" x="4" y="65" w="35" h="30" onclick="next"/>
        <image asset="noah" x="60" y="10" w="20" h="65"/>
        <image asset="speechbubble" x="35" y="17" w="32" h="19"/>
        <!-- fontsize and width are expected font and widths of text in 1920 x 1200 resolution -->
        <text x="10" y="15" w="22" h="23" font="solid Arial, sans-serif" fontsize="96" width="422" color="#fff">
            Noah's Ark...
        </text>
        <text x="7" y="40" w="32" h="40" font="Arial, serif" fontsize="48" width="614" color="#fff">
            Add the things in pictures to find out the total number of beings that Noah is carrying in his spaceship to Mars.
        </text>
        <text x="38" y="22" w="28" h="16" font="Arial, serif" fontsize="32" width="537" color="#000">Hey, Ramya...
I need your help in adding the
things to my space ship
        </text>
        <events>
            <event on="next" transition="item" effect="page-flip"/>
        </events>
    </stage>
    <stage id="item" x="0" y="0" w="100" h="100" datasource="items">
        <image asset="bg" x="0" y="0" w="100" h="100"/>
        <image asset="difficulty_high" x="2" y="3" w="5" h="10"/>
        <text x="8" y="8" w="40" h="10" font="solid Arial, sans-serif" fontsize="48" width="768" color="#fff">
            ADDITION - By Grouping
        </text>
        <placeholder param="var1" x="5" y="15" w="25" h="25"/>
        <input type="number" class="inputText" x="14" y="57" w="5" h="5" id="text1" param="ans1"/>
        <image asset="separator_vertical" x="32" y="10" w="0.5" h="50"/>
        <placeholder param="var2" x="37" y="15" w="25" h="25"/>
        <input type="number" class="inputText" x="43" y="57" w="5" h="5" id="text2" param="ans2"/>
        <image asset="separator_horizontal" x="2" y="65" w="58" h="1"/>
        <placeholder param="var3" x="2" y="66" w="80" h="15"/>
        <input type="number" class="inputText" x="28" y="90" w="5" h="5" id="text3" param="ans3"/>
        <image asset="plus" x="30.7" y="33" w="3" h="3"/>
        <image asset="equals" x="30.7" y="64" w="3" h="3"/>
        <image asset="noah" x="62" y="5" w="15" h="50"/>
        <image asset="hint" x="93" y="20" w="5" h="9"/>
        <image asset="validate" x="93" y="30" w="5" h="9" onclick="eval"/>
        <image asset="blacktint_full" x="0" y="0" w="100" h="100" hide="true" id="img_overlay"/>
        <image asset="correct_answer" x="15" y="15" w="70" h="70" hide="true" id="img_correct_answer"/>
        <image asset="wrong_answer" x="15" y="15" w="70" h="70" hide="true" id="img_wrong_answer"/>
        <image asset="button_next" x="43" y="45" w="15" h="5" hide="true" id="btn_next" onclick="next"/>
        <image asset="button_tryagain" x="43" y="45" w="15" h="5" hide="true" id="btn_try_again" onclick="try_again"/>
        <events>
            <event on="eval" eval="text1,text2,text3" success="correct_answer" failure="wrong_answer"/>
            <event on="correct_answer" show="img_overlay,img_correct_answer,btn_next" hide="img_wrong_answer,btn_try_again"/>
            <event on="wrong_answer" show="img_overlay,img_wrong_answer,btn_try_again" hide="img_correct_answer,btn_next"/>
            <event on="try_again" reload="true"/>
            <event on="next" transition="summary" effect="page-flip"/>
        </events>
    </stage>
    <stage id="summary" x="0" y="0" w="100" h="100">
        <image asset="bg" x="0" y="0" w="100" h="100"/>
        <image asset="difficulty_high" x="2" y="3" w="5" h="10"/>
        <text x="8" y="8" w="40" h="10" font="solid Arial, sans-serif" fontsize="48" width="768" color="#fff">
            ADDITION - By Grouping
        </text>
        <text x="10" y="50" w="32" h="40" font="Arial, serif" fontsize="96" width="614" color="#fff">
            The End
        </text>
        <image asset="noah" x="48" y="10" w="20" h="65"/>
    </stage>
    <events>
        <event on="test" isTest="true"/>
    </events>
</theme>