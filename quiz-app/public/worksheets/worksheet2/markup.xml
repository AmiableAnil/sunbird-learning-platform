<theme id="theme" startStage="splash">
    <manifest>
        <media id="bg1" src="bg1.png" type="image" />
        <media id="bg3" src="bg3.png" type="image" />
        <media id="bg4" src="bg4.png" type="image" />
        <media id="bg5" src="bg5.png" type="image" />
        <media id="box" src="box.png" type="image" />
        <media id="blacktint_full" src="blacktint_full.png" type="image" />
        <media id="next" src="icon_next.png" type="image" />
        <media id="previous" src="icon_previous.png" type="image" />
        <media id="profile" src="icon_profile.png" type="image" />
        <media id="button_next" src="button_next.png" type="image" />
        <media id="button_tryagain" src="button_tryagain.png" type="image" />
        <media id="home_icon" src="home_icon.png" type="image" />

        <media id="angry_bird" src="characters/angry-bird.png" type="image" />
        <media id="apple" src="characters/apple.png" type="image" />
        <media id="banana" src="characters/banana.png" type="image" />
        <media id="horse" src="characters/horse.png" type="image" />
        <media id="mango" src="characters/mango.png" type="image" />
        <media id="rabbit" src="characters/rabbit.png" type="image" />
        <media id="yellow_bird" src="characters/yellow_bird.png" type="image" />

        <media id="start" src="start.png" type="image" />
        <media id="correct" src="correct.png" type="image" />
        <media id="try_again" src="try_again.png" type="image" />
        <media id="grant_sprite" src="grant_sprite.json" type="spritesheet" />

        <media id="worksheet_data" src="items.json" type="json" />
    </manifest>
    <datasource asset="worksheet_data"/>
    <stage id="splash" x="0" y="0" w="100" h="100">
        <image asset="bg5" x="0" y="0" w="100" h="100"/>
        <text x="10" y="15" w="30" h="23" font="Arial" weight="bold" fontsize="96" color="#fff">
            Counting Numbers...
        </text>
        <text x="40" y="45" w="55" h="49" font="Georgia" fontsize="36" color="#666">
            Counting and number recognition worksheets are among the first math worksheets that preschool and kindergarten children will practice with. Number recognition is a building block to success in math. As preschool and kindergarten children start to recognize their numbers, it is natural for them to begin counting objects.
        </text>
        <sprite asset="grant_sprite" start="run" x="35" y="50"/>
        <image asset="start" x="40" y="78" w="22" h="22" onclick="stage:next">
            <event type="click">
                <action type="command" command="transitionTo" asset="theme" value="item" effect="scroll"/>
            </event>
        </image>
    </stage>
    <stage id="item" x="0" y="0" w="100" h="100">
        <placeholder param="var1" x="0" y="0" w="100" h="100"/>
        <text x="10" y="15" w="30" h="23" font="Arial" weight="bold" fontsize="96" color="#fff">
            Counting Numbers...
        </text>
        <text x="40" y="15" w="55" h="49" font="Georgia" fontsize="36" color="#fff">
            Enter the number that tells how many are in the group in the input box next to each group
        </text>
        <image asset="box" x="40" y="36" w="20" h="20" id="snapBox"/>
        <placeholder param="var4" x="38" y="58" w="35" h="20" font="Georgia" fontsize="24" color="#666"/>
        <placeholder param="var2" x="9" y="75" w="40" h="5" enabledrag="true" snapTo="snapBox"/>
        <input type="number" class="inputText" x="2" y="76" w="5" h="5" id="text1" param="ans1"/>

        <placeholder param="var3" x="79" y="70" w="30" h="5" enabledrag="true" snapTo="snapBox"/>
        <input type="number" class="inputText" x="72" y="72" w="5" h="5" id="text2" param="ans2"/>

        <image asset="blacktint_full" x="0" y="0" w="100" h="100" visible="false" id="img_overlay"/>
        <sprite asset="grant_sprite" start="jump" x="45" y="45" visible="false" id="sprite_jump"/>
        <image asset="correct" x="30" y="30" w="40" h="30" visible="false" id="img_correct">
            <event type="click">
                <action type="command" command="transitionTo" asset="theme" value="summary" effect="moveIn" direction="right" ease="linear" duration="500"/>
            </event>
        </image>
        <image asset="try_again" x="30" y="30" w="40" h="30" visible="false" id="img_try_again">
            <event type="click">
                <action type="command" command="reload" asset="item" effect="fadeIn" direction="top" ease="linear" duration="1500"/>
            </event>
        </image>

        <image asset="previous" x="83" y="1" w="5" h="9">
            <event type="click">
                <action type="command" command="transitionTo" asset="theme" value="splash" effect="fadeInOut" ease="linear" duration="500" transitionType="previous"/>
            </event>
        </image>
        <image asset="profile" x="88" y="1" w="5" h="9"/>
        <image asset="next" x="93" y="1" w="5" h="9">
            <event type="click">
                <action type="command" command="transitionTo" asset="theme" value="summary" effect="moveIn" direction="right" ease="linear" duration="500"/>
            </event>
        </image>
        <image asset="button_next" x="80" y="90" w="15" h="9">
            <event type="click">
                <action type="command" command="eval" asset="item" fields="text1,text2" success="correct_answer" failure="wrong_answer"/>
            </event>
        </image>
        <appEvents list="correct_answer,wrong_answer"/>
        <events>
            <event type="correct_answer">
                <action type="command" command="show" asset="img_overlay"/>
                <action type="command" command="show" asset="img_correct"/>
                <action type="command" command="show" asset="sprite_jump"/>
                <action type="command" command="hide" asset="img_try_again"/>
                <action type="command" command="hide" asset="text1"/>
                <action type="command" command="hide" asset="text2"/>
            </event>
            <event type="wrong_answer">
                <action type="command" command="show" asset="img_overlay"/>
                <action type="command" command="show" asset="img_try_again"/>
                <action type="command" command="hide" asset="img_correct"/>
                <action type="command" command="hide" asset="sprite_jump"/>
                <action type="command" command="hide" asset="text1"/>
                <action type="command" command="hide" asset="text2"/>
            </event>
        </events>
    </stage>
    <stage id="summary" x="0" y="0" w="100" h="100">
        <image asset="bg5" x="0" y="0" w="100" h="100"/>
        <image asset="home_icon" x="93" y="1" w="5" h="9">
            <event type="click">
                <action type="command" command="windowEvent" asset="theme" href="index.html"/>
            </event>
        </image>
        <text x="10" y="15" w="30" h="23" font="Arial" weight="bold" fontsize="96" color="#fff">
            Counting Numbers...
        </text>
        <summary x="40" y="40" w="32" h="40" font="Arial, serif" fontsize="64" width="614" color="#fff" param="summary">
        </summary>
        <sprite asset="grant_sprite" start="jump_run" x="35" y="30"/>
    </stage>
</theme>