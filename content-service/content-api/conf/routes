# Routes
# This file defines all application routes (Higher priority routes first)

GET	    /health                                             @controllers.HealthController.checkAPIhealth

# Content V3 API's

POST    /content/v3/create                                  @controllers.ContentV3Controller.create()
GET     /content/v3/read/:identifier                        @controllers.ContentV3Controller.read(identifier:String, mode:Option[String], fields:Option[List[String]])
PATCH   /content/v3/update/:identifier                      @controllers.ContentV3Controller.update(identifier:String)
POST    /content/v3/upload/:identifier                      @controllers.ContentV3Controller.upload(identifier:String)
POST    /content/v3/upload/url/:identifier                  @controllers.ContentV3Controller.preSignedUrl(identifier:String)
POST    /content/v3/bundle                                  @controllers.ContentV3Controller.bundle()
POST    /content/v3/review/:identifier                      @controllers.ContentV3Controller.review(identifier:String)
POST    /content/v3/publish/:identifier                     @controllers.ContentV3Controller.publish(identifier:String)
POST    /content/v3/unlisted/publish/:identifier            @controllers.ContentV3Controller.unlistedPublish(identifier:String)
GET     /content/v3/hierarchy/:identifier                   @controllers.ContentV3Controller.readHierarchy(identifier:String, mode:Option[String], fields:Option[List[String]])
GET     /content/v3/hierarchy/:rootId/:bookmarkId           @controllers.ContentV3Controller.readHierarchyWithBookmarkId(rootId:String, bookmarkId:String, mode:Option[String], fields:Option[List[String]])
PATCH   /content/v3/hierarchy/update                        @controllers.ContentV3Controller.updateHierarchy()
POST    /content/v3/copy/:identifier                        @controllers.ContentV3Controller.copy(identifier:String)
DELETE  /content/v3/retire/:identifier                      @controllers.ContentV3Controller.retire(identifier:String)
POST    /content/v3/flag/:identifier                        @controllers.ContentV3Controller.flag(identifier:String)
POST    /content/v3/flag/accept/:identifier                 @controllers.ContentV3Controller.acceptFlag(identifier:String)

POST    /content/v3/dialcode/link                           @controllers.ContentV3Controller.linkDialCode()
POST    /collection/v3/dialcode/link/:identifier            @controllers.ContentV3Controller.collectionLinkDialCode(identifier:String)
POST    /content/v3/dialcode/reserve/:identifier            @controllers.ContentV3Controller.reserveDialCode(identifier:String)
PATCH   /content/v3/dialcode/release/:identifier            @controllers.ContentV3Controller.releaseDialCode(identifier:String)


