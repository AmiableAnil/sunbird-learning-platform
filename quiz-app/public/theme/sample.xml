<theme>
    <manifest>
        <media id="bg" src="bg.png" type="image" />
        <media id="noah" src="noah.png" type="image" />
        <media id="entermission" src="entermission.png" type="image" />
    </manifest>
    <stage id="splash" start="true" x="0" y="0" w="100" h="100">
        <image asset="bg" x="0" y="0" w="100" h="100"/>
        <image asset="noah" x="48" y="10" w="20" h="65"/>
        <image asset="entermission" x="30" y="78" w="22" h="22" onclick="next"/>
        <events>
            <event on="enter" sprite="" animation="" effect=""/>
            <event on="idle" sprite="" animation="" effect=""/>
            <event on="next" transition="welcome" effect="page-flip"/>
        </events>
    </stage>
    <stage id="welcome" x="0" y="0" w="100" h="100">
        <g x="0" y="0" w="100" h="100">
            <image asset="bg" x="0" y="0" w="100" h="100"/>
        </g>
    </stage>
</theme>